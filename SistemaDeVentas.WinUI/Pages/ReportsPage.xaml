<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SistemaDeVentas.WinUI.Pages.ReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SistemaDeVentas.WinUI.Pages" xmlns:viewmodels="using:SistemaDeVentas.WinUI.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="0,0,0,1" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{x:Bind ViewModel.Title}" 
                               Style="{StaticResource TitleTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="AnÃ¡lisis de ventas y estadÃ­sticas del negocio" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <Button Command="{x:Bind ViewModel.ExportReportCommand}"
                            Style="{StaticResource PrimaryButtonStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8B6;"/>
                                <TextBlock Text="Exportar PDF"/>
                            </StackPanel>
                        </Button.Content>
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="E"/>
                        </Button.KeyboardAccelerators>
                    </Button>
                    <Button Command="{x:Bind ViewModel.RefreshCommand}"
                            Style="{StaticResource FluentButtonStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE72C;"/>
                                <TextBlock Text="Actualizar"/>
                            </StackPanel>
                        </Button.Content>
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F5"/>
                        </Button.KeyboardAccelerators>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="24" ZoomMode="Disabled">
            <StackPanel Spacing="24">

                <!-- Filtros de Fecha -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" CornerRadius="8" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Desde:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,12,0"
                                   Style="{StaticResource BodyTextBlockStyle}"/>
                        
                        <DatePicker Grid.Column="1"
                                    Date="{Binding StartDate, Mode=TwoWay}"
                                    Margin="0,0,24,0"/>

                        <TextBlock Grid.Column="2" Text="Hasta:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,12,0"
                                   Style="{StaticResource BodyTextBlockStyle}"/>
                        
                        <DatePicker Grid.Column="3"
                                    Date="{Binding EndDate, Mode=TwoWay}"
                                    Margin="0,0,24,0"/>

                        <ComboBox Grid.Column="4" 
                                  Header="PerÃ­odo" 
                                  SelectedItem="{x:Bind ViewModel.SelectedPeriod, Mode=TwoWay}"
                                  MinWidth="150">
                            <ComboBoxItem Content="Hoy"/>
                            <ComboBoxItem Content="Esta semana"/>
                            <ComboBoxItem Content="Este mes"/>
                            <ComboBoxItem Content="Ãšltimos 30 dÃ­as"/>
                            <ComboBoxItem Content="Este aÃ±o"/>
                            <ComboBoxItem Content="Personalizado" IsSelected="True"/>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Tarjetas de Resumen -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Ventas Totales -->
                    <Border Grid.Column="0" Grid.Row="0" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" CornerRadius="8" 
                            Padding="20" Margin="0,0,12,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ’°" FontSize="24" HorizontalAlignment="Left" Margin="0,0,0,8"/>
                            <TextBlock Text="Ventas Totales" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.TotalSales}" 
                                       Style="{StaticResource TitleTextBlockStyle}" 
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" 
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="{x:Bind ViewModel.SalesGrowth}" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource SystemFillColorSuccessBrush}" 
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- NÃºmero de Transacciones -->
                    <Border Grid.Column="1" Grid.Row="0" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" CornerRadius="8" 
                            Padding="20" Margin="0,0,12,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ§¾" FontSize="24" HorizontalAlignment="Left" Margin="0,0,0,8"/>
                            <TextBlock Text="Transacciones" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.TotalTransactions}" 
                                       Style="{StaticResource TitleTextBlockStyle}" 
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="{x:Bind ViewModel.TransactionsGrowth}" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource SystemFillColorSuccessBrush}" 
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Ticket Promedio -->
                    <Border Grid.Column="2" Grid.Row="0" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" CornerRadius="8" 
                            Padding="20" Margin="0,0,12,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š" FontSize="24" HorizontalAlignment="Left" Margin="0,0,0,8"/>
                            <TextBlock Text="Ticket Promedio" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.AverageTicket}" 
                                       Style="{StaticResource TitleTextBlockStyle}" 
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="{x:Bind ViewModel.TicketGrowth}" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource SystemFillColorSuccessBrush}" 
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Productos Vendidos -->
                    <Border Grid.Column="3" Grid.Row="0" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" CornerRadius="8" 
                            Padding="20" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="ðŸ“¦" FontSize="24" HorizontalAlignment="Left" Margin="0,0,0,8"/>
                            <TextBlock Text="Productos Vendidos" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{x:Bind ViewModel.ProductsSold}" 
                                       Style="{StaticResource TitleTextBlockStyle}" 
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="{x:Bind ViewModel.ProductsGrowth}" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource SystemFillColorSuccessBrush}" 
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- GrÃ¡ficos y Tablas -->
                <Grid x:Name="ReportsPageGrid">
                    <Grid.RenderTransform>
                        <TranslateTransform />
                    </Grid.RenderTransform>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- GrÃ¡fico de Ventas -->
                    <Border Grid.Column="0" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" CornerRadius="8" 
                            Padding="20" Margin="0,0,12,0">
                        <StackPanel>
                            <TextBlock Text="Tendencia de Ventas" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       Margin="0,0,0,16"/>
                            
                            <!-- Placeholder para grÃ¡fico -->
                            <Border Height="300" 
                                    Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                    BorderThickness="1" CornerRadius="4">
                                <TextBlock Text="ðŸ“ˆ GrÃ¡fico de Ventas" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           Style="{StaticResource BodyTextBlockStyle}" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Top Productos -->
                    <Border Grid.Column="1" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" CornerRadius="8" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Productos MÃ¡s Vendidos" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       Margin="0,0,0,16"/>
                            
                            <ListView ItemsSource="{x:Bind ViewModel.TopProducts}" 
                                      SelectionMode="None" 
                                      Height="300">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" 
                                                           Style="{StaticResource BodyTextBlockStyle}" 
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Code}" 
                                                           Style="{StaticResource CaptionTextBlockStyle}" 
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding QuantitySold}" 
                                                       Style="{StaticResource BodyStrongTextBlockStyle}" 
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Tabla de Ventas Recientes -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Ventas Recientes" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       HorizontalAlignment="Left"/>
                            <Button Command="{x:Bind ViewModel.ViewAllSalesCommand}"
                                     HorizontalAlignment="Right"
                                     Style="{StaticResource FluentButtonStyle}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8A9;"/>
                                        <TextBlock Text="Ver todas"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </Grid>

                        <ListView ItemsSource="{x:Bind ViewModel.RecentSales}" 
                                  SelectionMode="Single" 
                                  Height="400">
                            <ListView.HeaderTemplate>
                                <DataTemplate>
                                    <Grid Padding="12,8" 
                                          Background="{ThemeResource LayerFillColorDefaultBrush}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="Fecha" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="NÃºmero" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="2" Text="Cliente" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="3" Text="Items" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="4" Text="Total" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="5" Text="Estado" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.HeaderTemplate>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding DateFormatted}" Style="{StaticResource BodyTextBlockStyle}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SaleNumber}" Style="{StaticResource BodyTextBlockStyle}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding CustomerName}" Style="{StaticResource BodyTextBlockStyle}" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="3" Text="{Binding ItemCount}" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="{Binding TotalFormatted}" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <Border Grid.Column="5" 
                                                Background="{Binding StatusColor}" 
                                                CornerRadius="12" 
                                                Padding="8,4">
                                            <TextBlock Text="{Binding Status}" 
                                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                                       Foreground="White" 
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="2" 
                Background="{ThemeResource SmokeFillColorDefaultBrush}" 
                Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressRing IsActive="True" Width="48" Height="48"/>
                <TextBlock Text="Cargando reportes..." 
                           Style="{StaticResource BodyTextBlockStyle}" 
                           Margin="0,16,0,0" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>

    <!-- Page Animations -->
    <Page.Resources>
        <Storyboard x:Key="PageLoadStoryboard">
            <DoubleAnimation Storyboard.TargetName="ReportsPageGrid"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="ReportsPageGrid"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="20" To="0" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>
</Page>