<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SistemaDeVentas.WinUI.Pages.SalesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                CornerRadius="8" Margin="16,16,16,8" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Punto de Venta" Style="{ThemeResource TitleTextBlockStyle}"/>
                    <TextBlock Text="{Binding ViewModel.CurrentDateTime, Mode=OneWay}" 
                               Style="{ThemeResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Style="{StaticResource FluentButtonStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE721;"/>
                                <TextBlock Text="Buscar Producto"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Style="{StaticResource FluentButtonStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8CB;"/>
                                <TextBlock Text="Filtros"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Product Search and Cart -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <AutoSuggestBox Grid.Row="0" 
                                PlaceholderText="Buscar producto por código o nombre..."
                                QueryIcon="Find"
                                Margin="0,0,0,16"/>

                <!-- Cart Items -->
                <Border Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Carrito de Compras" 
                                   Style="{ThemeResource SubtitleTextBlockStyle}" 
                                   Margin="0,0,0,16"/>

                        <ListView Grid.Row="1" x:Name="CartItemsListView" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CardStyle}"
                                            Margin="0,4"
                                            Padding="12"
                                            Background="{ThemeResource SubtleFillColorTransparentBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding ProductName}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding FormattedPrice}"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>

                                            <NumberBox Grid.Column="1" Value="{Binding Amount, Mode=TwoWay}"
                                                       Minimum="0.01" SpinButtonPlacementMode="Inline"
                                                       Width="100" Margin="8,0"
                                                       Style="{StaticResource FluentTextBoxStyle}"/>

                                            <TextBlock Grid.Column="2" Text="{Binding FormattedTotal}"
                                                       FontWeight="SemiBold" VerticalAlignment="Center"
                                                       Margin="16,0"/>

                                            <Button Grid.Column="3" Style="{StaticResource SubtleButtonStyle}"
                                                    Padding="8" Margin="8,0,0,0"
                                                    ToolTipService.ToolTip="Remover producto">
                                                <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="{StaticResource ErrorBrush}"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>

            <!-- Sale Summary -->
            <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16">
                <Grid x:Name="SalesPageGrid">
                    <Grid.RenderTransform>
                        <TranslateTransform />
                    </Grid.RenderTransform>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Summary Header -->
                    <TextBlock Grid.Row="0" Text="Resumen de Venta" 
                               Style="{ThemeResource SubtitleTextBlockStyle}" 
                               Margin="0,0,0,16"/>

                    <!-- Summary Details -->
                    <StackPanel Grid.Row="1" Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Subtotal:"/>
                            <TextBlock Grid.Column="1" Text="{Binding ViewModel.Subtotal, Mode=OneWay}" FontWeight="SemiBold"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="IVA (19%):"/>
                            <TextBlock Grid.Column="1" Text="{Binding ViewModel.Tax, Mode=OneWay}" FontWeight="SemiBold"/>
                        </Grid>

                        <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Total:" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                            <TextBlock Grid.Column="1" Text="{Binding ViewModel.Total, Mode=OneWay}" 
                                       Style="{ThemeResource SubtitleTextBlockStyle}" 
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        </Grid>

                        <ComboBox Header="Método de Pago" PlaceholderText="Seleccionar..."
                                  HorizontalAlignment="Stretch" Margin="0,16,0,0">
                            <ComboBoxItem Content="Efectivo"/>
                            <ComboBoxItem Content="Tarjeta de Débito"/>
                            <ComboBoxItem Content="Tarjeta de Crédito"/>
                            <ComboBoxItem Content="Transferencia"/>
                        </ComboBox>

                        <ComboBox Header="Tipo de Documento DTE" PlaceholderText="Seleccionar..."
                                  SelectedValue="{Binding ViewModel.SelectedDteType, Mode=TwoWay}"
                                  HorizontalAlignment="Stretch" Margin="0,8,0,0">
                            <ComboBoxItem Content="Boleta Afecta" Tag="39"/>
                            <ComboBoxItem Content="Boleta Exenta" Tag="41"/>
                            <ComboBoxItem Content="Factura Afecta" Tag="33"/>
                            <ComboBoxItem Content="Factura Exenta" Tag="34"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- PDF417 Code Display -->
                    <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8" Padding="16" Margin="0,16,0,0"
                            Visibility="{Binding ViewModel.IsPdf417BitmapVisible, Mode=OneWay}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Código PDF417 del TED"
                                       Style="{ThemeResource SubtitleTextBlockStyle}"
                                       Margin="0,0,0,16"/>
                            <Image Grid.Row="1" Source="{Binding ViewModel.Pdf417ImageSource, Mode=OneWay}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Stretch="Uniform"/>
                        </Grid>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="3" Spacing="8" Margin="0,24,0,0">
                        <Button Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Command="{Binding ViewModel.ProcessSaleCommand}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8FB;"/>
                                    <TextBlock Text="Procesar Venta"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Style="{StaticResource FluentButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Visibility="{Binding ViewModel.IsPdf417Visible, Mode=OneWay}"
                                Command="{Binding ViewModel.ShowPdf417Command}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A5;"/>
                                    <TextBlock Text="Mostrar Código PDF417"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Style="{StaticResource FluentButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Command="{Binding ViewModel.ClearCartCommand}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;"/>
                                    <TextBlock Text="Limpiar Carrito"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Print Controls Section -->
        <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8" Padding="16" Margin="16,0,16,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Print Header -->
                <TextBlock Grid.Row="0" Text="Impresión de Documentos"
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,16"/>

                <!-- Print Controls -->
                <StackPanel Grid.Row="1" Spacing="12">
                    <ComboBox Header="Impresora Seleccionada"
                              PlaceholderText="Seleccionar impresora..."
                              HorizontalAlignment="Stretch"/>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Style="{StaticResource PrimaryButtonStyle}"
                                IsEnabled="True">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE749;"/>
                                    <TextBlock Text="Imprimir Boleta"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button Style="{StaticResource FluentButtonStyle}"
                                IsEnabled="True">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A5;"/>
                                    <TextBlock Text="Imprimir Factura"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button Style="{StaticResource FluentButtonStyle}"
                                IsEnabled="True">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A5;"/>
                                    <TextBlock Text="Prueba de Impresión"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button Style="{StaticResource SubtleButtonStyle}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72C;"/>
                                    <TextBlock Text="Refrescar"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>

                    <!-- Print Status -->
                    <Border Background="{ThemeResource SubtleFillColorTransparentBrush}"
                            CornerRadius="4" Padding="8"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ProgressRing IsActive="True" Width="16" Height="16"/>
                            <TextBlock Text="Imprimiendo..."
                                       Style="{ThemeResource CaptionTextBlockStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Success Message -->
                    <Border Background="{ThemeResource SuccessFillColorDefaultBrush}"
                            CornerRadius="4" Padding="8"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE73E;" Foreground="{ThemeResource SuccessTextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Impresión exitosa"
                                       Foreground="{ThemeResource SuccessTextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Error Message -->
                    <Border Background="{ThemeResource ErrorFillColorDefaultBrush}"
                            CornerRadius="4" Padding="8"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE783;" Foreground="{ThemeResource ErrorTextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Error en impresión"
                                       Foreground="{ThemeResource ErrorTextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </Grid>
        </Border>

        <!-- Floating Action Button -->
        <Button Grid.Row="3" Style="{StaticResource FloatingActionButtonStyle}"
                ToolTipService.ToolTip="Crear nueva venta">
            <Button.Content>
                <FontIcon Glyph="&#xE710;" FontSize="20"/>
            </Button.Content>
        </Button>
    </Grid>

    <!-- Page Resources -->
    <Page.Resources>
        <Storyboard x:Key="PageLoadStoryboard">
            <DoubleAnimation Storyboard.TargetName="SalesPageGrid"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="SalesPageGrid"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="20" To="0" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

</Page>